<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane fx:id="historyPane" minHeight="400.0" minWidth="800.0" xmlns="http://javafx.com/javafx/16"
		   xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hedera.hashgraph.client.ui.HistoryPaneController">
	<VBox>
		<StackPane.margin>
			<Insets bottom="10.0" left="25.0" right="25.0" top="10.0"/>
		</StackPane.margin>
		<HBox>
			<VBox fx:id="filterVBox" HBox.hgrow="ALWAYS"/>
			<Region HBox.hgrow="ALWAYS"/>
		</HBox>
		<ScrollPane fx:id="contentScrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER"
					style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS"/>
	</VBox>
</StackPane>
